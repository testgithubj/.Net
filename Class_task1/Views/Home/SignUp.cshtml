@model Class_task1.Models.SignUp
@{
    ViewBag.Title = "SignUp";
}




<form action="" method="post">
    Name: <input type="text" name="Name" placeholder="Name" value="@(Model==null ? "":Model.Name)" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("name")</span>
    <br />
    Username :
    <input type="text" name="username" placeholder="Username" class="form-control" value="@(Model==null ? "":Model.Username)" />
    <br />
    <span class="text-danger">@Html.ValidationMessage("username")</span>
    <br />
    Email:<input type="email" name="email" placeholder="Enter your email" class="form-control" value="@(Model==null ?"":Model.Email)"> <br />
    <span class="text-danger">@Html.ValidationMessage("email")</span><br />
    Student Id:<input type="text" name="id" placeholder="Enter your Id" class="form-control" value="@(Model==null ?"":Model.Id)"> <br />
    <span class="text-danger">@Html.ValidationMessage("id")</span><br />

    Password: <input type="password" placeholder="Password" name="password" class="form-control" value="@(Model==null ?"":Model.Password)" /><br />
    <span class="text-danger">@Html.ValidationMessage("password")</span><br />
    Date Of Birth:
    <input type="date" class="form-control" name="dob" value="@(Model==null ? "":Model.Dob.ToString("yyyy-M-dd"))" /><br />
    <span class="text-danger">@Html.ValidationMessage("dob")</span><br />

    <br />
    <input type="submit" value="Sign Up" class="btn btn-success" />
</form>